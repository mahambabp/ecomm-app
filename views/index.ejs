<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TechStore - Premium Electronics</title>
    <link rel="stylesheet" href="/style.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <header class="header">
      <div class="container">
        <div class="logo">
          <i class="fas fa-shopping-bag"></i>
          <h1>Tech Ecommerce Store</h1>
        </div>
        <nav class="nav">
          <a href="#products" class="nav-link">Products</a>
          <div class="cart-icon">
            <i class="fas fa-shopping-cart"></i>
            <span class="cart-count"><%= cart.length %></span>
          </div>
        </nav>
      </div>
    </header>

    <main class="main">
      <section class="hero">
        <div class="container">
          <h2 class="hero-title">Upgrade Your Life with Cutting-Edge Tech</h2>
          <p class="hero-subtitle">
            Discover the latest in Devices and with unbeatable prices
          </p>
        </div>
      </section>

      <section id="products" class="products-section">
        <div class="container">
          <h2 class="section-title">Featured Products</h2>
          <div class="products-grid">
            <% products.forEach(p => { %>
            <div class="product-card">
              <div class="product-image">
                <i
                  class="fas fa-<%= p.name === 'Laptop' ? 'laptop' : p.name === 'Phone' ? 'mobile-alt' : 'headphones' %>"
                ></i>
              </div>
              <div class="product-info">
                <h3 class="product-name"><%= p.name %></h3>
                <p class="product-price">$<%= p.price.toLocaleString() %></p>
                <form
                  method="POST"
                  action="/add-to-cart"
                  class="add-to-cart-form"
                >
                  <input type="hidden" name="productId" value="<%= p.id %>" />
                  <button type="submit" class="btn btn-primary">
                    <i class="fas fa-cart-plus"></i>
                    Add to Cart
                  </button>
                </form>
              </div>
            </div>
            <% }) %>
          </div>
        </div>
      </section>

      <section class="cart-section">
        <div class="container">
          <h2 class="section-title">Shopping Cart</h2>
          <% if (cart.length === 0) { %>
          <div class="empty-cart">
            <i class="fas fa-shopping-cart"></i>
            <p>Your cart is empty</p>
            <p class="empty-cart-subtitle">Add some products to get started!</p>
          </div>
          <% } else { %>
          <div class="cart-items">
            <% cart.forEach(item => { %>
            <div class="cart-item">
              <div class="cart-item-info">
                <h4><%= item.name %></h4>
                <p class="cart-item-price">
                  $<%= item.price.toLocaleString() %>
                </p>
              </div>
              <div class="cart-item-icon">
                <i class="fas fa-check-circle"></i>
              </div>
            </div>
            <% }) %>
            <div class="cart-total">
              <strong
                >Total: $<%= cart.reduce((sum, item) => sum + item.price,
                0).toLocaleString() %></strong
              >
            </div>
          </div>
          <% } %>
        </div>
      </section>
    </main>

    <footer class="footer">
      <div class="container">
        <p>&copy; 2025 TechStore. Premium electronics for modern living.</p>
      </div>
    </footer>
  </body>
</html>
